<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/schedulItemView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:padding="1dp" >

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:minWidth="100dp" >

            <TextView
                android:id="@+id/txtRouteName"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="#FF00FF"
                android:gravity="center_vertical|center_horizontal"
                android:minWidth="100dp"
                android:minHeight="100dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/temp_stop_name_Jarrold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:paddingLeft="5dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/txtNextStopTilte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/temp_stop_title_Next_Bus_In"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#707070"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtETA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="@string/temp_stop_3_minutes"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#FF0000"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtUpcomingStops"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/temp_stop_time_list"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#707070"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>